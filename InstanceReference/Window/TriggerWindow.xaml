<Window x:Class="InstanceReference.TriggerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InstanceReference"
        xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
        mc:Ignorable="d"
        Title="Window1"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="true"
        SizeToContent="WidthAndHeight"
        Topmost="True">
    <Border BorderBrush="#FF000000" BorderThickness="1" CornerRadius="10">
        <Image gif:AnimationBehavior.SourceUri=".\Icon\check.gif"
                gif:AnimationBehavior.RepeatBehavior="Forever" Width="30" Height="30"
               x:Name="indicator"
               />
    </Border>
</Window>
